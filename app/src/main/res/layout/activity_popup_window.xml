<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        >
        <Button
            android:id="@+id/btn_origin"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:text="点我"
            android:layout_centerInParent="true"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:background="@drawable/border_solid"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="horizontal"
                    >
                    <RadioButton
                        android:id="@+id/rb_align_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="al"
                        />
                    <RadioButton
                        android:id="@+id/rb_align_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ar"
                        />
                    <RadioButton
                        android:id="@+id/rb_center_hori"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ch"
                        />
                    <RadioButton
                        android:id="@+id/rb_to_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="tl"
                        />

                    <RadioButton
                        android:id="@+id/rb_to_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="tr"
                        />
                </RadioGroup>
                <Button
                    android:id="@+id/btn_reset_hori"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reset"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="horizontal"
                    >
                    <RadioButton
                        android:id="@+id/rb_align_above"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="aa"
                        />
                    <RadioButton
                        android:id="@+id/rb_align_bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ab"
                        />
                    <RadioButton
                        android:id="@+id/rb_center_vert"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="cv"
                        />
                    <RadioButton
                        android:id="@+id/rb_to_above"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ta"
                        />

                    <RadioButton
                        android:id="@+id/rb_to_bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="tb"
                        />
                </RadioGroup>
                <Button
                    android:id="@+id/btn_reset_vert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reset"
                    />

            </LinearLayout>



        </LinearLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>