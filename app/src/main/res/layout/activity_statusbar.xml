<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            >
            <Button
                android:id="@+id/btn_set_color_transparency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="颜色与透明度"
                />
            <Button
                android:id="@+id/btn_transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="透明度"
                />
            <Button
                android:id="@+id/btn_imageview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Imageview状态栏"
                />
            <Button
                android:id="@+id/btn_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Use In Fragment"
                />

            <Button
                android:id="@+id/btn_swipe_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="For Swipe back Activity"
                />
            <Button
                android:id="@+id/btn_light_dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Light Dark Mode"
                />

            <Button
                android:id="@+id/btn_drawerlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="For Drawerlayout"
                />
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>